<launch>
  <arg name="joy_config" default="f310" />
  <arg name="config_filepath" default="$(find turtlebot3_nps)/config/$(arg joy_config).config.yaml" />
  <arg name="first_joy"  default="/dev/input/js0"/>
  <arg name="second_joy" default="/dev/input/js1"/>
  <arg name="first_tb3"  default="tb3_0"/>
  <arg name="second_tb3" default="tb3_1"/>
  
	<group ns = "$(arg first_tb3)">
	  <node pkg="joy" type="joy_node" name="joy_node">
	    <param name="dev" value="$(arg first_joy)" />
	    <param name="deadzone" value="0.1" />
	    <param name="autorepeat_rate" value="20" />
	  </node>

	  <node pkg="teleop_twist_joy" name="teleop_twist_joy" type="teleop_node">
	    <rosparam command="load" file="$(arg config_filepath)" />
	  </node>
	</group>
</launch>
